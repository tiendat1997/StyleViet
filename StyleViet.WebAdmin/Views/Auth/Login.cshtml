@{
    Layout = null;
    ViewData["Title"] = "Login";
}
@model StyleViet.Service.ViewModel.LoginViewModel

<h2>LOGIN PAGE</h2>
<hr />
@if (TempData["LoginStatus"] != null)
{    
    <span class="alert alert-danger">@TempData["LoginStatus"]</span>
}
<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" type="text" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-default btn-primary" />
    </div>
</form>

<a asp-action="Register" class="btn btn-info">SignUp</a>
